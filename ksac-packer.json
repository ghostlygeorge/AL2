{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_session_token": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "token": "{{user `aws_session_token`}}",
      "region": "eu-west-1",
      "subnet_id": "subnet-034b86dcc0971436f",
      "vpc_id": "vpc-048a846907dbde562",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-*-x86_64-*",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ec2-user",
      "ami_name": "amzn2-x86_64-{{timestamp}}",
      "tags": {
        "Name": "al2-cis-{{timestamp}}",
        "OS": "Amazon Linux 2",
        "SecurityBaseline": "CIS-L1",
        "CreatedBy": "Packer-Ansible-George",
        "BuildTime": "{{timestamp}}"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/xvda",
          "volume_size": 30,
          "volume_type": "gp3",
          "delete_on_termination": true
        }
      ],
      "metadata_options": {
        "http_tokens": "required",
        "http_endpoint": "enabled"
      }
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "--extra-vars",
        "skip_falcon_registration=true"
      ]
    }
  ]
}
